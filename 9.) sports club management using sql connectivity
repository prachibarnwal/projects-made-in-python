#login screen
a = rd.randint(1,9)
b = rd.randint(1,9)
c = rd.randint(1,9)
d = rd.randint(1,9)
e = rd.randint(1,9)
num = str(a)+str(b)+str(c)+str(d)+str(e)
#MAIN CODE 
print("\t\t",num)
n = int(input("Enter The Number Shown Above : "))
if str(n) == num:
    print("🥳🥳"*15)
    print("YAYYIIEE...ACCESS GRANTED..!!")
    print("\n\n\n")
    while con.is_connected():
        ch = welcome()
        if ch == 7:
            print("Thanks For Visiting")
            break
        elif ch == 1:
            manage_members()
        elif ch == 2:
            manage_sports()
        elif ch == 3:
            manage_coaches()
        elif ch == 4:
            manage_batches()
        elif ch == 5:
            enroll_member()
        elif ch == 6:
            show_enrollments()
        else:
            print("-___- 5 options kaafi nhi the 😒😒")
            break

else:
    print("Seems like it's not a human being -__-")
    print("You Can't Access the Information. SORRY >_____<")      

